# =============================================================================
# WICKED WAIFUS SERVER CONFIGURATION
# =============================================================================
# Copy this file to .env and modify the values as needed
# All services will read from this single .env file

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost:5433
DB_USERNAME=postgres
DB_PASSWORD=x
DB_NAME=shorekeeper

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Config Server
CONFIG_SERVER_HTTP_ADDR=0.0.0.0:10001

# Login Server
LOGIN_SERVER_HTTP_ADDR=0.0.0.0:5500
LOGIN_SERVER_GATEWAY_HOST=127.0.0.1
LOGIN_SERVER_GATEWAY_PORT=7777

# Gateway Server
GATEWAY_SERVICE_ID=1
GATEWAY_KCP_PORT=7777
GATEWAY_KCP_CRC=false
GATEWAY_SERVICE_ENDPOINT_ADDR=tcp://127.0.0.1:10003
GATEWAY_GAME_SERVER_ENDPOINT_ADDR=tcp://127.0.0.1:10004

# Game Server
GAME_SERVER_SERVICE_ID=2
GAME_SERVER_SERVICE_ENDPOINT_ADDR=tcp://127.0.0.1:10004
GAME_SERVER_GATEWAY_ENDPOINT_ADDR=tcp://127.0.0.1:10003

# Hotpatch Server
HOTPATCH_SERVER_HTTP_ADDR=0.0.0.0:10002

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
ENCRYPTION_KEY=t+AEu5SGdpz06tomonajLMau9AJgmyTvVhz9VtGf1+0=
ENCRYPTION_IV=fprc5lBWADQB7tim0R2JxQ==

# =============================================================================
# PROTOKEY CONFIGURATION
# =============================================================================
PROTOKEY_BUILTIN_ENCRYPTION_MSG_ID=111,112
PROTOKEY_USE_CLIENT_KEY=true

# =============================================================================
# CONFIG SERVER SPECIFIC
# =============================================================================
CONFIG_SERVER_SERVE_WEB_PATH=/
CONFIG_SERVER_SERVE_DIR_PATH=data/assets/config-server
CONFIG_SERVER_REPOSITORY_URL=https://git.xeondev.com/wickedwaifus/wicked-waifus-config-server-files.git
CONFIG_SERVER_REFERENCE=a7ad3d4ef8
CONFIG_SERVER_DISCARD_LOCAL_CHANGES=true

# =============================================================================
# GAME SERVER SPECIFIC
# =============================================================================
GAME_SERVER_RESOURCES_PATH=data/assets/game-data
GAME_SERVER_LOAD_TEXTMAPS=true
GAME_SERVER_QUADRANT_SIZE=1000000
GAME_SERVER_ASSET_URL=https://git.xeondev.com/wickedwaifus/wicked-waifus-data/releases/download/pioneer_2.5.2/bundle.zip
GAME_SERVER_BUFFER_SIZE=268435456

# =============================================================================
# GAME UNLOCK CONFIGURATION
# =============================================================================
# Role unlocks
UNLOCK_ALL_ROLES=true
UNLOCK_ALL_ROLES_MAX_LEVEL=false
UNLOCK_ALL_ROLES_ALL_SEQUENCES=false
UNLOCK_ALL_MC_ELEMENTS=true

# Weapon unlocks
UNLOCK_ALL_WEAPONS=false
UNLOCK_ALL_WEAPONS_MAX_LEVEL=false
UNLOCK_ALL_WEAPONS_ALL_RESON=false

# Content unlocks
UNLOCK_ALL_ADVENTURES=false
UNLOCK_ALL_FUNCTIONS=true
UNLOCK_ALL_GUIDES=false
UNLOCK_ALL_TUTORIALS=false
UNLOCK_ALL_TELEPORTER=false

# Skin unlocks
UNLOCK_ALL_ROLE_SKINS=false
UNLOCK_ALL_WEAPON_SKINS=false
UNLOCK_ALL_FLY_SKINS=false
UNLOCK_ALL_WING_SKINS=false
UNLOCK_ALL_ECHO_SKINS=false
UNLOCK_ALL_ECHO=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development, false for production
DEBUG_MODE=true
LOG_LEVEL=debug

# =============================================================================
# DOCKER CONFIGURATION (if using Docker)
# =============================================================================
# Uncomment and modify if using Docker
# DB_HOST=wicked-waifus-postgres:5432
# GATEWAY_SERVICE_ENDPOINT_ADDR=tcp://wicked-waifus-gateway-server:10003
# GAME_SERVER_GATEWAY_ENDPOINT_ADDR=tcp://wicked-waifus-gateway-server:10003 
